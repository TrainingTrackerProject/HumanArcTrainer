<h2>Quiz</h2>
<br />

<div ng-app="QuizApp" ng-controller="QuizCtrl" ng-init="json">
    <div ng-repeat="question in json.allQuestions">

        <!--Displays multiple choice questions-->
        <div ng-if="question.type == 'multipleChoice'">
            <!--If Question type = Multiple choice-->
            <div class="row">
                <div class="col-sm-4">
                    <label for="choices">{{json.allQuestions.indexOf(question)+1}}. {{question.text}}</label>
                </div>
            </div>
            <br />
            <input ng-repeat="answer in question.answers" type="radio" class="form-control" value="{{answer.text}}" name="{{question.text}}">
            @*
            <div class="form-group row">
                <div class="col-sm-1">
                    <input id="answerOne" type="radio" value="answerOne" checked name="multipleChoice" />
                    <label for="answerOne">Answer 1</label> <!--Get multiple choice "answers" here-->
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1">
                    <input id="answerTwo" type="radio" value="answerTwo" name="multipleChoice" />
                    <label for="answerTwo">Answer 2</label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1">
                    <input id="answerThree" type="radio" value="answerThree" name="multipleChoice" />
                    <label for="answerThree">Answer 3</label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1">
                    <input id="answerFour" type="radio" value="answerFour" name="multipleChoice" />
                    <label for="answerFour">Answer 4</label>
                </div>
            </div>*@
        </div>
        <br /><br />

        <!--Displays true/false questions-->
        <div ng-if="question.type == 'trueFalse'">
            <!--If Question type = True/False-->   
            
            <div class="row">
                <div class="col-sm-4">
                    <label for="choices">{{json.allQuestions.indexOf(question)+1}}. {{question.text}}</label>
                </div>
            </div>
            <br />
            <input ng-repeat="answer in question.answers" type="radio" class="form-control" value="{{answer.text}}" name="{{question.text}}">
                {{question.text}}
            @*<div class="form-group row">
                <div class="col-sm-1">
                    <input id="trueAnswer" type="radio" value="trueAnswer" checked name="trueFalseQuestion" />
                    <label for="trueAnswer">True</label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-1">
                    <input id="falseAnswer" type="radio" value="falseAnswer" name="trueFalseQuestion" />
                    <label for="falseAnswer">False</label>
                </div>
            </div>*@

        </div>

        <!--Displays short answer questions-->
        <div ng-if="question.type == 'shortAnswer'">
            <!--If Question type = Short Answer-->
            <br /><br />
            <div class="row">
                <div class="col-sm-4">
                    <label for="choices">{{json.allQuestions.indexOf(question)+1}}. {{question.text}}</label>
                </div>
            </div>
            <br />
            <textarea class="form-control" rows="5" id="shortAnswerQuestion"></textarea>
        </div>
        <br />
    </div>
    @*Modal for Submit confimation*@
    <div class="modal fade" id="confirm-submit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    Confirm Submit
                </div>
                <div class="modal-body">
                    Are you sure you want to submit this quiz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button id="submit" class="btn btn-success success" onclick="location.href='@Url.Action("myTraining", "Training")'">Submit</button>
                </div>
            </div>
        </div>
    </div>
    <button id="submitModal" type="button" data-toggle="modal" data-target="#confirm-submit" class="btn btn-primary pull-right">Submit Quiz</button>
</div>
<script src="~/Scripts/Quiz.js"></script>