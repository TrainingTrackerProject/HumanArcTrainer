@*This file holds the page where the ability to edit traning is. Users can look
  at different training and delete exisitng traning. They can also add training, 
  which will reroute them to a new page to do so.*@
@{
    ViewBag.Title = "Edit Training";
}

<div>
	<h2>Edit or Remove Exisiting Training</h2>
    <h4>Review already existing training below by clicking on the edit button to edit, or the remove button to remove.</h4><br/><br/>
</div>
<div ng-app="editTrainingApp" ng-controller="RemoveCtrl">
    <div class="form-group">
	    <div class="row">  
            <div class="col-md-10">
			    @* creates table based off 'EditTraining.js' script *@
                <table id="trainingTable" class="display" cellspacing="0" style="width:100%;"></table>

                @* button placement to add a new training, goes to 'addTraining.cshtml' page *@ 
                <input type="submit" value="Add A New Training" id="AddTrainingButton" 
                       class="btn btn-primary" role="button" aria-disabled="false"
                       onclick="location.href='@Url.Action("AddTraining", "Training")'"/>
	        </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>

<script src="~/Scripts/EditTraining.js"></script>

