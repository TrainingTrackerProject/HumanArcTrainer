@{
    ViewBag.Title = "Edit Training";
}

<div>
	<h2>Training Table</h2>
</div>

<div class="form-group">
    <table class="table table-stripped">
		<tbody>
			<tr>
				<th></th>
				<th>Name</th>
				<th>Description</th>
			</tr>
			<tr ng-repeat="training in trainingCtrl.trainings">
				<td>
					<a ui-sref=".edit({trainingId : training.ID})">Edit</a>
					 |           
					<a href="#" ng-click="trainingCtrl.delete(training.ID)">Delete</a>
				</td>
                <td>{{training.Name}}</td>
				<td>{{training.Description}}</td>
			</tr>
		</tbody>
	</table>
     <input type="submit" value="Add A New Training" id="AddTrainingButton" 
               class="btn btn-primary" role="button" aria-disabled="false"
               onclick="location.href='@Url.Action("AddTraining", "Training")'"/>
</div>

